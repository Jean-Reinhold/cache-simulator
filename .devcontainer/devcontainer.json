{
    "name": "Python Project",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "[python]": {
            "editor.formatOnSave": true,
            "python.formatting.provider": "black",
            "python.formatting.blackArgs": [
                "--line-length",
                "88"
            ]
        }
    },
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
    ],
    "forwardPorts": [],
    "postCreateCommand": "pip install -r requirements.txt && pip install black==22.3.0",
    "remoteUser": "python"
}